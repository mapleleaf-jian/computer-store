<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ms.store.mapper.FavoriteMapper">
    <resultMap id="FavoriteEntityMap" type="ms.store.entity.Favorite">
        <id property="fid" column="fid" />
        <result property="pid" column="pid" />
        <result property="uid" column="uid" />
        <result property="image" column="image" />
        <result property="price" column="price" />
        <result property="title" column="title" />
        <result property="createdUser" column="created_user" />
        <result property="createdTime" column="created_time" />
        <result property="modifiedUser" column="modified_user" />
        <result property="modifiedTime" column="modified_time" />
    </resultMap>

    <select id="findAllByUid" resultMap="FavoriteEntityMap">
        select * from t_favorite where uid=#{uid}
        <if test="title != null">
            and title like #{title}
        </if>
    </select>

    <select id="findByPid" resultMap="FavoriteEntityMap">
        select * from t_favorite where pid=#{pid} and uid=#{uid}
    </select>

    <insert id="insertFavorite" useGeneratedKeys="true" keyProperty="fid">
        insert into t_favorite (pid, uid, image, price, title, created_user, created_time, modified_user, modified_time)
        values(#{pid}, #{uid}, #{image}, #{price}, #{title},
               #{createdUser}, #{createdTime}, #{modifiedUser}, #{modifiedTime})
    </insert>

    <delete id="deleteByFid">
        delete from t_favorite where fid=#{fid}
    </delete>

    <select id="findByFid" resultMap="FavoriteEntityMap">
        select * from t_favorite where fid=#{fid}
    </select>
</mapper>