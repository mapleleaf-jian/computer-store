<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ms.store.mapper.DistrictMapper">
    <resultMap id="DistrictEntityMap" type="ms.store.entity.District">
        <id property="id" column="id"></id>
        <result property="parent" column="parent"></result>
        <result property="code" column="code"></result>
        <result property="name" column="name"></result>
    </resultMap>

    <select id="findDistrictsByParent" resultMap="DistrictEntityMap">
        select * from t_dict_district where parent=#{parent} order by code asc
    </select>

    <select id="findNameByCode" resultType="string">
        select name from t_dict_district where code=#{code}
    </select>
</mapper>